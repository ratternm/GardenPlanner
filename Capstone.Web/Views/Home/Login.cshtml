@if (TempData["Success"] != null)
{
    <h3 class="alert alert-success registrationSuccessful" id="successMessage">@TempData["Success"]</h3>
}

<div class="row">
    <div id="login" class="card align-items-center mh-100 pt-5 form plot">
        <h2 class="card-title">Login</h2>

        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            <div class="mb-3">
                <div>
                    @Html.TextBoxFor(m => m.EmailAddress, new { placeholder = "email" })
                </div>
                <div>
                    @Html.ValidationMessageFor(m => m.EmailAddress)
                </div>
            </div>
            <div class="mb-1">
                <div>
                    @Html.PasswordFor(m => m.Password, new { placeholder = "password" })
                </div>
                <div>
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div>
                <a class="registrationLink" href="/Home/Register">New user? Click here to register!</a>
            </div>
            <button class="loginButton btn-sample rounded btn">Login</button>
        }
    </div>
</div>




